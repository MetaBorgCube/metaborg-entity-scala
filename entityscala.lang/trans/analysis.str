module analysis

rules // Analysis

  external editor-analyze(|)

rules // Editor services
  
  external editor-resolve(|)

  editor-hover:
    (node, position, ast, path, project-path) -> node

rules // Debugging

  debug-show-analyzed:
    (_, _, ast, path, _) -> (filename, result)
    with
      filename := <guarantee-extension(|"analyzed.aterm")> path;
      result   := ast
